<%= simple_form_for @school, html: { class: 'new-item-form form-horizontal center', multipart: true } do |f| %>
  <h3 align="center"><%= action_name.capitalize %> School Form</h3>
  <br />
  <div class="form-group">
    <%= f.label :name, "Name", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", style: "width: 97%;" %>
    </div>
  </div>
  <br />
  <div class="form-group">
    <%= f.label :street_1, "Street 1", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= f.text_field :street_1, class: "form-control" %>
    </div>
    <%= f.label :street_2, "Street 2", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= f.text_field :street_2, class: "form-control" %>
    </div>
  </div>
  <br />
  <div class="form-group">
    <%= f.label :city, "City", class: "col-sm-1 col-form-label" %>
    <div class="col-sm-2">
      <%= f.text_field :city, class: "form-control" %>
    </div>
    <%= f.label :state, "State", class: "col-sm-1 col-form-label" %>
    <div class="col-sm-2">
      <%= f.input :state, collection: School::STATES_LIST, include_blank: true, input_html: {class: "form-control"}, label: false %>
    </div>
    <%= f.label :zip, "Zip", class: "col-sm-1 col-form-label" %>
    <div class="col-sm-2">
      <%= f.text_field :zip, class: "form-control" %>
    </div>
  </div>
  <br />
  <div class="form-group">
    <%= f.label :min_grade, "Minimum Grade", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= f.text_field :min_grade, class: "form-control" %>
    </div>
    <%= f.label :max_grade, "Maximum Grade", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= f.text_field :max_grade, class: "form-control" %>
    </div>
  </div>

  <div class="form-group" style="margin-left: 17%;">
    <div class="checkbox">
      <%= f.check_box :active, class: "form-check-input" %> Active
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary', :style => "margin: 0 auto; width: 20%;" %>
    <%= link_to 'Cancel', schools_path, :class => 'btn btn-primary', :style => "width: 20%;" %>
  </div>
<% end %>
