<%= simple_form_for @school, html: { class: 'new-item-form form-horizontal center', multipart: true } do |f| %>
  <h3 align="center"><%= action_name.capitalize %> School Form</h3>
  <br />
  <div class="form-group">
    <div class="col-sm-12">
    <%= f.label :name, "Name", class: "col-sm-2 col-form-label", style: "padding-left:0px;text-align:left;" %>
    <%= f.text_field :name, class: "form-control", style: "width: 100%;" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-6">
      <%= f.label :street_1, "Street 1", class: "col-sm-2 col-form-label fix-label", style: "padding-left:0px;text-align:left;" %>
      <%= f.text_field :street_1, class: "form-control" %>
    </div>
    <div class="col-sm-6">
      <%= f.label :street_2, "Street 2", class: "col-sm-2 col-form-label", style: "padding-left:0px;text-align:left;" %>
      <%= f.text_field :street_2, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4">
      <%= f.label :city, "City", class: "col-sm-1 col-form-label", style: "padding-left:0px;text-align:left;" %>
      <%= f.text_field :city, class: "form-control" %>
    </div>
    <div class="col-sm-4">
      <%= f.label :state, "State", class: "col-sm-1 col-form-label", style: "padding-left:0px;text-align:left;" %>
      <%= f.input :state, collection: School::STATES_LIST, include_blank: true, input_html: {class: "form-control"}, label: false %>
    </div>
    <div class="col-sm-4">
      <%= f.label :zip, "Zip", class: "col-sm-1 col-form-label", style: "padding-left:0px;text-align:left;" %>
      <%= f.text_field :zip, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-6">
      <%= f.label :min_grade, "Minimum Grade", class: "col-sm-2 col-form-label", style: "padding-left:0px;text-align:left;width:100%;" %>
      <%= f.text_field :min_grade, class: "form-control" %>
    </div>
    <div class="col-sm-6">
      <%= f.label :max_grade, "Maximum Grade", class: "col-sm-2 col-form-label", style: "padding-left:0px;text-align:left;width:100%;" %>
      <%= f.text_field :max_grade, class: "form-control" %>
    </div>
  </div>
  <br />
  <div class="form-actions" style="margin-left:-15px;">
    <div class="col-sm-12">
      <%= f.hidden_field :from_register, value: true %>
      <%= f.submit nil, :class => 'btn btn-primary', :style => "margin: 0 auto;width:104%;", name: :from_register %>
    </div>
  </div>
<% end %>
