<div class="row">
  <div class="col-sm-12">
    <% if @items_in_cart.empty? %>
      <h4 class="empty-cart-msg">Your cart is empty. Buy something! &#9786;</h4>
    <% else %>
      <table id="show-cart" class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @items_in_cart.each do |i| %>
            <tr>
              <div class="cart-img-content">
                <td align="center">
                  <div class="cart-item-img">
                    <% unless i.item.picture %>
                      <%= link_to image_tag('placeholder.jpg', :alt => i.item.name), item_path(i.item) %>
                    <% else %>
                      <%= link_to image_tag(i.item.picture, :alt => i.item.name), item_path(i.item) %>
                    <% end %>
                  </div>
                </td>
                <td><p class="cart-item-name"><strong><%= link_to i.item.name, item_path(i.item) %></strong></p></td>
                <td>
                  <p class="cart-item-quantity" id="oi-quantity-link<% i.item.id %>"><%= i.quantity %>
                    <!-- <% link_to edit_order_item_path(i.item.id, item_id: i.item.id), remote: true do %>
                      <span class="glyphicon glyphicon-pencil"></span>
                    <% end %> -->
                  </p>
                </td>
                <td><p class="cart-item-price"><%= number_to_currency i.item.current_price %></p></td>
                <td><p class="cart-item-price"><%= number_to_currency i.subtotal(Date.current) %></p></td>
                <td><%= button_to "Remove", remove_item_path(i.item), class: "btn btn-primary cart-rm-item-btn" %></td>
              </div>
            </tr>
          <% end %>
          <tr>
            <td></td>
            <td><strong>Shipping Costs</strong></td>
            <td></td>
            <td></td>
            <td><%= number_to_currency @shipping_cost %></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td><strong>Total</strong></td>
            <td></td>
            <td></td>
            <td><%= number_to_currency @grand_total %></td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <div class="row cart-actions">
        <div class="col-sm-5">
          <%= link_to "Empty Cart", empty_cart_path, method: :post, class: "btn btn-primary", style: "width: 100%" %>
        </div>
        <div class="col-sm-5">
          <%= link_to "Checkout", checkout_path, class: "btn btn-primary", style: "width: 100%" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
