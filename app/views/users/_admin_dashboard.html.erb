<div class="row">
  <div class="col-sm-6">
    <%= render partial: "revenue_split_chart" %>
  </div>
  <div class="col-sm-6">
      <%= render partial: "revenue_line_chart" %>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <%= render partial: "best_customers_table" %>
  </div>
  <div class="col-sm-6">
