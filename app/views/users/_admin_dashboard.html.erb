      <div class="col-sm-6">
        <%= render partial: "small_card", locals: {title: "Total Customers", focus: @total_customers} %>
      </div>
      <div class="col-sm-6">
        <%= render partial: "small_card", locals: {title: "Orders Placed Today", focus: @orders_placed_today} %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <%= render partial: "action_small_card", locals: {title: "Reorder Items", focus: @items_need_reorder, path: "/items"} %>
