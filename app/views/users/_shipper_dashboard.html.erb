<div class="row">
  <div class="col-sm-9">
    <div class="card" style="height: 300px;">
      <h4 class="card-header" style="text-align: center;">Pending Orders</h4>
      <% unless @pending_orders.empty? %>
        <%= render partial: "orders/orders_table", locals: {orders: @pending_orders, page: :pending_page, width: "width:100%;"} %>
      <% else %>
        <p class="table-empty-msg">Everything has been shipped &#9786;</p>
      <% end %>
    </div>
  </div>
</div>
