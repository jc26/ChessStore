<div id="orders-table-container">
  <ul class="nav nav-pills nav-fill">
    <li class="active"><a data-toggle="pill" href="#customers">Customers</a></li>
    <li><a data-toggle="pill" href="#employees">Employees</a></li>
  </ul>

  <div class="tab-content">
    <div id="customers" class="tab-pane fade in active">
      <% unless @customers.empty? %>
        <%= render partial: "users_table", locals: {users: @customers, role: false, page: :customers_page} %>
      <% else %>
        <h4 style="color:gray;margin-left: 15%;">There are no customers.</h4>
      <% end %>
    </div>
    <div id="employees" class="tab-pane fade">
      <% unless @employees.empty? %>
        <%= render partial: "users_table", locals: {users: @employees, role: true, page: :employees_page} %>
      <% else %>
        <h4 style="color:gray;margin-left: 15%;">There are no employees.</h4>
      <% end %>
    </div>
  </div>
  <% if logged_in? && !current_user.role?(:customer) %>
    <%= link_to "Add User", new_user_path(is_employee: true), class: "btn btn-primary add-school-btn" %>
  <% end %>
</div>
