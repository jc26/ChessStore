<div id="login" class="row">
  <div class="col-sm-7">
    <div class="middle">
        <div class="form-top" style="background-color:#656EA9">
            <div class="form-top-left" style="color:white;">
                <h3>Please Login</h3>
                <p>Enter username and password to log on:</p>
            </div>
            <div class="form-top-right">
                <i class="fa fa-lock"></i>
            </div>
        </div>
        <div class="form-bottom">
          <%= form_tag sessions_path, :class => 'login-form', :role => 'form' do %>
            <div class="form-group">
              <%= label_tag :username %>
              <%= text_field_tag :username, params[:username], :class => 'form-control' %>
            </div>

            <div class="form-group">
              <%= label_tag :password %>
              <%= password_field_tag :password, params[:password], :class => "form-control" %>
            </div>
            <div class="row actions">
              <div class="col-sm-6">
                <%= submit_tag "Log In", :class => 'btn login' %>
              </div>
              <div class="col-sm-6">
                <%= link_to "Sign Up", new_user_path, :class => "btn register" %>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
