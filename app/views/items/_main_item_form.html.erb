<div class="form-group">
  <%= f.label :name, "Name", class: "col-sm-2 col-form-label" %>
  <div class="col-sm-4">
    <%= f.input :name, input_html: {class: "form-control"}, label: false %>
  </div>
  <%= f.label :category, "Category", class: "col-sm-2 col-form-label" %>
  <div class="col-sm-4">
    <%= f.input :category, collection: Item::CATEGORIES, include_blank: true, input_html: {class: "form-control"}, label: false %>
  </div>
</div>

<div class="row form-group">
  <%= f.label :description, "Description", class: "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
    <%= f.input :description, input_html: {class: "form-control desc"}, label: false %>
  </div>
</div>
<br />
<div class="row form-group">
  <%= f.label :color, "Color", class: "col-sm-2 col-form-label" %>
  <div class="col-sm-4">
    <%= f.text_field :color, class: "form-control" %>
  </div>
  <%= f.label :weight, "Weight", class: "col-sm-2 col-form-label" %>
  <div class="col-sm-4">
    <%= f.input :weight, input_html: {class: "form-control"}, label: false %>
  </div>
</div>
<br />
<% if controller.action_name == "new" %>
  <div class="row form-group">
    <%= f.label :inventory_level, "Inventory Level", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= f.input :inventory_level, input_html: {class: "form-control"}, label: false %>
    </div>
    <%= f.label :reorder_level, "Reorder Level", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= f.input :reorder_level, input_html: {class: "form-control"}, label: false %>
    </div>
  </div>
<% end %>
<div class="form-group">
  <%= f.label "Picture", class: "col-sm-2 col-form-label" %>
  <%= f.file_field :picture %>
</div>
<% if edit %>
  <div class="form-group", style="margin-left: -45px;">
    <%= f.input :active %>
  </div>
<% else %>
  <%= f.input :active, as: :hidden, input_html: { value: true } %>
<% end %>
