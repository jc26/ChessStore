<div class="card" id="wholesale-list">
  <h4 class="card-header" style="text-decoration:underline;">Wholesale Price</h4>
  <h5><strong>Current </strong><%= number_to_currency @item.current_price %></h5>
  <% unless @wholesale_price_history.empty? %>
  <div class="card-block">
    <table class="ph table-hover">
      <thead>
        <tr class="ph-heading">
          <th>Price</th>
          <th>Start Date</th>
        </tr>
      </thead>
      <tbody>
        <% @wholesale_price_history.each do |change| %>
          <tr>
            <td><%= number_to_currency change.price %></td>
            <td><%= change.start_date.strftime('%m/%d/%y') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br />
  </div>
  <% else %>
  <p style="color: #ABB0BE;">No Wholesale Price History</p>
  <% end %>
  <%= link_to(new_item_price_path(item_id: @item.id, category: 'wholesale', id: 'new_whole_ip_link'), id: 'new_whole_ip_link', class: 'btn btn-primary', style: 'margin-top: 0px;', remote: true) do %>
    Add Wholesale Price
  <% end %>
</div>
